{
  "name": "node-blog",
  "version": "1.0.0",
  "description": "My splendiferous Nuxt.js project",
  "author": "LeiChao",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "install": "cross-env NODE_ENV=production pm2 start server/index.js --name blog --watch",
    "deploy": "npm run build && npm run install",
    "redeploy": "npm run build && pm2 delete blog && npm run install"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "nuxt": "^2.4.0",
    "koa": "^2.6.2",
    "koa-router": "^7.4.0",
    "mongoose": "^5.4.20"
  },
  "devDependencies": {
    "nodemon": "^1.18.9"
  }
}
